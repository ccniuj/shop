<h1 class="text-center">訂單標號:  <%= @order.id %></h1>
<div class="row">
  <div class="col-md-12"> 
    <table class="table table-hover">
      <thead> 
        <tr>
          <td> 商品名稱 </td>
          <td> 顏色 </td>
          <td> 尺寸 </td>
          <td> 數量 </td>
          <td></td>
        </tr>
      </thead>
      <tbody>
        <% @item.each do |i| %>
          <tr>
          <td> <%= @inventories.find(i.inventory_id).product.name %> </td>
          <td> <%= @inventories.find(i.inventory_id).color %> </td>
          <td> <%= @inventories.find(i.inventory_id).size %> </td>
          <td> <%= i.amount %> </td>
          </tr>
        <% end %> 
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="col-md-offset-4 col-md-4">
    <h3 class="text-center">收件人</h3>
    <div>姓名: 
      <%= @contacts.find(@order.contact_id).name %>
    </div>
    <div>電子郵件: 
      <%= @contacts.find(@order.contact_id).email %>
    </div>
    <div>電話: 
      <%= @contacts.find(@order.contact_id).cellphone %>
    </div>
    <div>地址: 
      <%= @contacts.find(@order.contact_id).address %>
    </div>
  </div>
</div>
<%= link_to("返回", orders_path, :class => "btn btn-sm btn-default") %>
