<a href="/home/newest">
  <h1 style="text-align:center;">The Newest Products</h1>
</a>

<table class="table table-hover">
  <thead> 
    <tr style="text-align:center;">
      <td> # </td>
      <td> 名稱 </td>
      <td> 尺寸 </td>
      <td> 價錢 </td>
    </tr>
  </thead>
  <tbody>
  	  <% @newest_products.each do | newest | %>
        <tr style="text-align:center;">
          <td><%= newest.id %></td>
          <td><%= newest.name %></td>
          <td>
          	<% this_product_size = [] %>
            <% newest.inventories.each do | inventory | %> 
              <% this_product_size << inventory.size %>
            <% end %>
            <% this_product_size.uniq.each do | size | %>
              <%= size %>
            <% end %>
          </td>
          <td><%= newest.price %></td>
        </tr>
      <% end %>
  </tbody>
</table>

<br>

