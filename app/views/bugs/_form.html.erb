<div class="col-md-4 col-md-offset-4">
  <%= simple_form_for @bug do |f| %>
    <%= f.input :name, :label => "姓名", :input_html => { :class => "form-control"} %>
    <%= f.input :email, :label => "電子郵件", :input_html => { :class => "form-control"} %>
    <%= f.input :title, :label => "標題", :input_html => { :class => "form-control"} %>
    <%= f.input :content, :label => "內容", :input_html => { :class => "form-control"} %>
    <hr>
    <div class="form-actions">
      <%= f.submit "確認", :disable_with => 'Submiting...', :class => "btn btn-primary"%> 
      <%= link_to "返回", root_path, class: "btn btn-default" %>
    </div>
  <% end %> 
</div>