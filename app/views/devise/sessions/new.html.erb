<div class="col-md-4 col-md-offset-4">

  <h2 class="text-center">會員登入</h2>

  <hr>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,label: "電子郵件", :input_html => { :class => "form-control"}, required: false, autofocus: true %>
      <%= f.input :password, label: "密碼",:input_html => { :class => "form-control"}, required: false %>
   <p><%= f.input :remember_me, label: "記住我" , as: :boolean if devise_mapping.rememberable? %></p>
    </div>

    <hr>
    <div class="form-actions">
      <%= f.button :submit, "確認", :class => "btn btn-primary" %>
    </div>
  <% end %>

  <hr>
  <%= render "devise/shared/links" %>
</div>