<table class="table table-hover">
	<thead> 
	  <tr style="text-align:center;">
	    <td> # </td>
	    <td> 名稱 </td>
	    <td> 尺寸 </td>
	    <td> 價錢 </td>
	  </tr>
	</thead>
  <tbody>
  	  <% source.each do | product | %>
				<tr style="text-align:center;">
				  <td><%= product.id %></td>
				  <td><%= link_to product.name, product_path( product ) %></td>
				  <td>
				  	<% this_product_size = [] %>
				    <% product.inventories.each do | inventory | %> 
				      <% this_product_size << inventory.size %>
				    <% end %>
				    <% this_product_size.uniq.each do | size | %>
				      <%= size %>
				    <% end %>
				  </td>
				  <td><%= product.price %></td>
				</tr>
      <% end %>
  </tbody>
</table>