<h1 style="text-align:center;">存貨管理</h1>
<%= link_to("新增產品", new_admin_product_path , :class => "btn btn-primary pull-right" ) %>
<table class="table table-hover">
	<thead> 
	  <tr style="text-align:center;">
	    <td> # </td>
	    <td> 名稱 </td>
	    <td> 價錢 </td>
	    <td> 存貨類別數 </td>
	    <td> 存貨總量 </td>
	    <td> 銷售總量 </td>
	  </tr>
	</thead>
  <tbody>
  	  <% @products.each do | product | %>
				<tr style="text-align:center;">
				  <td><%= product.id %></td>
				  <td><%= link_to product.name, 
				                  edit_admin_product_path(product) %></td>
				  <td><%= product.price %></td>
				  <td><%= product.inventories.count %></td>
				  <td><%= product.total_amout %></td>
				  <td><%= product.total_popularity %></td>
				  <td>
				  	<%= link_to("編輯", 
				  	            edit_admin_product_path(product), 
				  	            :class => "btn btn-sm btn-default")%>
				  	<%= link_to("刪除", # need to insert remove product from SubclassProduct url (path)
				  		          admin_product_path(product),
                        :class => "btn btn-sm btn-default", :method=>:delete,
                        data:{confirm: "你確定要移除「#{product.name}」？"}) %>
				  </td>
				</tr>
      <% end %>
  </tbody>
</table>