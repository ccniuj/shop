<div class="col-md-4 col-md-offset-4">
  <%= simple_form_for [:admin, @faq] do |f| %>
    <%= f.input :question,label: "問題", :input_html => { :class => "form-control"} %>
    <%= f.input :answer,label: "回答", :input_html => { :class => "form-control"} %>
    <hr>
    <div class="form-actions">
      <%= f.submit "確認", :disable_with => 'Submiting...', :class => "btn btn-primary"%> 
      <%= link_to "返回", admin_faqs_path, class: "btn btn-default btn-sm" %>
    </div>
  <% end %> 
</div>