<div class="col-md-6 col-md-offset-3">
  <h1 class="text-center"><%= @mq.title %></h1>
  <div>提問時間: 
    <%= @mq.created_at %>
  </div>
  <div>內容: 
    <%= @mq.content %>
  </div>
  <div>狀態: 
    <%= @mq.status %>
  </div>
  <hr/>

  <% @mq.answers.order("created_at ASC").each do |ans| %>
      <div>回覆時間:
        <%= ans.created_at %>
      </div>
      <div>回覆人:
        <%= ans.user.id %>
      </div>
      <div>內容:
        <%= ans.content %>
      </div>
      <br/>
    <% end %>
    
    <%= simple_form_for [@mq, @answer] do |f| %>
      <%= f.input :content,:label => "內容", :input_html => { :class => "form-control"} %>
      <hr>
      <div class="form-actions">
        <%= f.submit "確認", :disable_with => 'Submiting...', :class => "btn btn-primary"%> 
      </div>
    <% end %> 

    <hr/>
</div>